@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid h-100 mt-5 fill-all">

    <header class="text-center">
        <h3 class="text-uppercase">Logga in</h3>
    </header>

    <div class="row mt-3 mb-5">
        <div class="col-6 col-sm-6 col-md-6 col-lg-3 mx-auto">
            <div asp-validation-summary="All"></div>
            <form asp-controller="User" asp-action="Login" method="POST">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control" asp-for="Username"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password"/>
                </div>
                <button type="submit" class="btn btn-primary">Logga in</button>
                <a asp-controller="User" asp-action="LoginFacebook" class="btn btn-secondary"><i class="fab fa-facebook"></i> Facebook</a>
            </form>
        </div>
    </div>
</div>

