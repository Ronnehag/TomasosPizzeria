@model NewDishViewModel

@{
    ViewData["Title"] = "Index";
}



<div class="container-fluid fill-all mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Skapa ny maträtt</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6 mx-auto">
            <form asp-controller="Dish" asp-action="Index" method="post">
                <div class="row">
                    <div class="col-8">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" maxlength="50">
                        <small><span asp-validation-for="Name"></span></small>
                    </div>
                    <div class="col-4">
                        <label asp-for="Price"></label>
                        <input class="form-control" asp-for="Price">
                        <small><span asp-validation-for="Price"></span></small>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FoodType"></label>
                    <select class="form-control" asp-for="FoodType" asp-items="@Model.FoodTypeSelectList"></select>
                    <small><span asp-validation-for="FoodType"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea class="form-control" asp-for="Description" rows="2"></textarea>
                    <small><span asp-validation-for="Description"></span></small>
                </div>
                <div class="row">
                    <div class="col-12 text-right">
                        <a class="btn btn-secondary" asp-controller="Admin" asp-action="AdminPage">Avbryt</a>
                        <button type="submit" class="btn btn-primary">Skapa</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-12 col-md-3 col-lg-3 mx-auto mt-3">
            <partial name="_NewDishAddIngredient" model="@Model"/>
        </div>
    </div>

</div>