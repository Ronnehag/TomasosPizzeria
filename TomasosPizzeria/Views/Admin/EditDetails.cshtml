@inject UserManager<AppUser> UserManager
@using Microsoft.AspNetCore.Identity
@model AdminChangeDetailsViewModel

@{
    ViewData["Title"] = "EditDetails";
}

<div class="container-fluid fill-all mt-5">

    <div class="row">
        <div class="col-12 text-center">
            <h1>Mina sidor - Admin</h1>
            <h6>Som admin kan du endast ändra email och lösenord</h6>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-sm-12 col-md-6 col-lg-6 mx-auto">
            <form method="post">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Användarnamn</label>
                            <input class="form-control" value="@User.Identity.Name" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" asp-for="Email" value="@Model.Email" />
                            <small><span asp-validation-for="Email"></span></small>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input class="form-control" asp-for="Password" />
                            <small><span asp-validation-for="Password"></span></small>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input class="form-control" asp-for="NewPassword" />
                            <small><span asp-validation-for="NewPassword"></span></small>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input class="form-control" asp-for="ConfirmPassword" />
                            <small><span asp-validation-for="ConfirmPassword"></span></small>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Uppdatera</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mx-auto text-center">
            <div id="updated-credentials">
                @if (!string.IsNullOrEmpty(ViewBag.PasswordChanged) || !string.IsNullOrEmpty(ViewBag.EmailChanged))
                {
               
                    <h5 id="confirmmsg">
                        @ViewBag.PasswordChanged
                        <br />
                        @ViewBag.EmailChanged
                    </h5>
              
                }
            </div>
        </div>
    </div>

</div>


<script>
    window.setTimeout(function () {
        $("#confirmmsg").fadeOut("slow");
    }, 3000);
</script>
