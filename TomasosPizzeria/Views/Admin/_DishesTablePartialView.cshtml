@model List<Matratt>


<script>
    $(document).ready(function () {

        if ($.fn.dataTable.isDataTable('#dishtable')) {
            $('#dishtable').DataTable();
        } else {
            $("#dishtable").DataTable({
                "order": [[1, "desc"]]
            });
        }
    });
</script>

<table class="table table-hover table-sm table-striped" style="width:100%" id="dishtable">
    <thead>
        <tr>
            <th scope="col">Namn</th>
            <th scope="col">Produkttyp</th>
            <th scope="col">Beskrivning</th>
            <th scope="col">Ingredienser</th>
            <th scope="col">Pris</th>
            <th scope="col">Hantering</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var dish in Model)
    {
        <tr>
            <td>@dish.MatrattNamn</td>
            <td>@dish.MatrattTypNavigation.Beskrivning</td>
            <td>@dish.Beskrivning</td>
            <td>TODO</td>
            <td>@dish.Pris.ToString("C")</td>
            <td><a href="#" class="btn btn-sm btn-secondary">Ändra</a></td>
        </tr>
    }



    </tbody>
</table>