@{
    ViewData["Title"] = "Admin Page";
}

<div class="container-fluid mt-5">
    <div class="row mt-3">
        <nav class="col-sm-12 text-center">
            <h1>Admin Dashboard</h1>
            <ul id="admin-links">
                <li>
                    <a class="nav-link"
                       data-ajax="true"
                       data-ajax-method="GET"
                       data-ajax-mode="replace"
                       data-ajax-update="#content-div"
                       data-ajax-loading="#spinner"
                       asp-controller="Admin" asp-action="Customers">Kunder</a>
                </li>
                <li>
                    <a class="nav-link"
                       asp-controller="Admin"
                       asp-action="GetOrders"
                       data-ajax="true"
                       data-ajax-mode="replace"
                       data-ajax-update="#content-div"
                       data-ajax-loading="#spinner">Ordrar</a>
                </li>
                <li>
                    <a class="nav-link"
                       asp-controller="Admin"
                       asp-action="GetFoodDishes"
                       data-ajax="true"
                       data-ajax-mode="replace"
                       data-ajax-update="#content-div"
                       data-ajax-loading="#spinner">Maträtter</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<div class="text-center mt-5">
    <span id="spinner" style="display:none;"><i class="fas fa-spinner fa-spin" style="font-size: 30px;"></i></span>
</div>

<div class="container fill-all mt-3" id="content-div">
    <!-- Links will render partials here -->
</div>



