@model Matratt
<!-- TODO skriva ut varje enskild produkt i en div med information -->



<div class="card p-1">
    <div class="card-body">
        <h4 class="card-title text-left">@Model.MatrattNamn</h4>
        <div class="row">
            <div class="col-6">
                <p class="card-text text-left">
                    @foreach (var ingredient in Model.MatrattProdukt)
                    {
                        <small>@ingredient.Produkt.ProduktNamn</small>

                    }
                </p>
            </div>

            <div class="text-right col-6">
                <span class="price-text mr-2">@Model.Pris.ToString("C")</span>
                <a class="btn btn-sm btn-success add" asp-controller="Cart" asp-action="AddItem" asp-route-id="@Model.MatrattId">+</a>
            </div>

        </div>
    </div>
</div>

