@model KundViewModel
@{
    ViewData["Title"] = "User Manager";
}


<div class="container-fluid h-100 mt-5">

    <header class="text-center">
        <h1>Redigera dina användaruppgifter</h1>
    </header>

    <form asp-action="EditDetails" method="post">
        <input type="hidden" asp-for="@Model.Kund.UserId" />
        <input type="hidden" asp-for="@Model.Kund.KundId" />

        <div class="row mt-3">
            <div class="col-1">
                <label asp-for="@Model.Kund.Bonuspoäng"></label>
                <input maxlength="100" class="form-control" asp-for="@Model.Kund.Bonuspoäng" value="@Model.Kund.Bonuspoäng" disabled">
            </div>
            <div class="col-2">
                <label asp-for="@Model.AnvandarNamn"></label>
                <input maxlength="20" class="form-control" asp-for="@Model.AnvandarNamn" value="@Model.AnvandarNamn" readonly="true">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <label asp-for="@Model.Kund.Namn"></label>
                <input maxlength="100" class="form-control" asp-for="@Model.Kund.Namn" value="@Model.Kund.Namn">
            </div>
            <div class="col">
                <label asp-for="@Model.Kund.Gatuadress"></label>
                <input maxlength="50" class="form-control" asp-for="@Model.Kund.Gatuadress" value="@Model.Kund.Gatuadress">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="@Model.Kund.Postnr"></label>
                <input maxlength="20" class="form-control" asp-for="@Model.Kund.Postnr" value="@Model.Kund.Postnr">
            </div>
            <div class="col">
                <label asp-for="@Model.Kund.Postort"></label>
                <input maxlength="100" class="form-control" asp-for="@Model.Kund.Postort" value="@Model.Kund.Postort">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="@Model.Kund.Email"></label>
                <input maxlength="50" class="form-control" asp-for="@Model.Kund.Email" value="@Model.Kund.Email">
            </div>
            <div class="col">
                <label asp-for="@Model.Kund.Telefon"></label>
                <input maxlength="50" class="form-control" asp-for="@Model.Kund.Telefon" value="@Model.Kund.Telefon">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="@Model.Losenord"></label>
                <input maxlength="20" class="form-control" asp-for="@Model.Losenord" value="@Model.Losenord">
                <small><span asp-validation-for="Losenord"></span></small>
            </div>
            <div class="col">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input maxlength="20" class="form-control" asp-for="@Model.ConfirmPassword">
                <small><span asp-validation-for="ConfirmPassword"></span></small>
            </div>
        </div>
        <div class="form-group mt-3 text-right">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Avbryt</a>
            <button type="submit" class="btn btn-primary">Uppdatera</button>
        </div>

    </form>
</div>

