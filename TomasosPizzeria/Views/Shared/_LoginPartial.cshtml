@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!--Om användaren är inloggad-->
@if (SignInManager.IsSignedIn(User))
{
    <!-- Om användaren är admin -->
    if (User.IsInRole("Admin"))
    {
        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a></li>
    }

    <li class="nav-item"><a class="nav-link" asp-controller="Order" asp-action="Create">Beställning</a></li>

    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="LogOut">Logga ut</a></li>

    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="EditDetails" asp-route-username="@User.Identity.Name">@User.Identity.Name</a></li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="User" asp-action="Register">Registera dig</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="User" asp-action="Login">Logga in</a>
    </li>
}
